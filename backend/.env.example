# Application Settings
APP_NAME=MultiModal ChatBot
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development
API_PREFIX=/api/v1

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/chatbot.db

# Vector Database
CHROMA_PERSIST_DIR=./data/vectordb
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# AI LLM Configuration
AI_API_KEY=your-ai-api-key-here
AI_MODEL=optimized-model
# Available models:
# - high-performance-model (Best quality, large context)
# - optimized-model (Balanced performance)
# - fast-model (Quick responses)
# - specialized-model (Task-specific optimization)
MAX_TOKENS=4096
TEMPERATURE=0.7

# File Upload
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=pdf,docx,txt,md,jpg,jpeg,png
UPLOAD_DIR=./data/uploads
PROCESSED_DIR=./data/processed

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001