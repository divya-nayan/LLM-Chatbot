# Application Settings
APP_NAME=MultiModal ChatBot
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development
API_PREFIX=/api/v1

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/chatbot.db

# Vector Database
CHROMA_PERSIST_DIR=./data/vectordb
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Groq LLM Configuration
GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL=llama3-8b-8192
# Available free models (as of 2024):
# - llama3-8b-8192 (LLaMA3 8B, fast, 8k context)
# - llama3-70b-8192 (LLaMA3 70B, best quality, 8k context)
# - llama-3.1-8b-instant (LLaMA 3.1 8B, fastest)
# - llama-3.1-70b-versatile (LLaMA 3.1 70B, versatile)
# - gemma2-9b-it (Gemma2 9B Instruct)
MAX_TOKENS=4096
TEMPERATURE=0.7

# File Upload
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=pdf,docx,txt,md,jpg,jpeg,png
UPLOAD_DIR=./data/uploads
PROCESSED_DIR=./data/processed

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001